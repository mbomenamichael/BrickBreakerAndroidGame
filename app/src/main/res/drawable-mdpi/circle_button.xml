<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="30dp"
        />
    <!--Colour/Gradient of colours-->
    <gradient
        android:angle="270"
        android:centerX="50%"
        android:startColor="#FAB56B"
        android:centerColor="#B55E02"
        android:endColor="#532B01"
        android:type="linear"
        />
    <!--Padding-->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <!--Size-->
    <size
        android:width="60dp"
        android:height="60dp"
        />
    <!--Border-->
    <stroke
        android:width="0dp"
        android:color="#051787"
        />
</shape>